<div class="modal-90-percent">

    <div class="width-100-percent left" style="height: calc(100% - 35px);">

        <div id="bs-work-area">
            <div id='bs-texts-container' class="width-30-percent fleft">
                <div id='bs-texts-header'><h2>Слои</h2></div>
                <div id="bs-texts-list" class="left"></div>
            </div>

            <div id="bs-editor-container" class="width-70-percent fleft">
                <div id="bs-editor-area" class="left"></div>
		<canvas id="bs-hidden-canvas"></canvas>
            </div>

        </div>

        <div id='bs-toolbar'>
            <div id="bs-add-text-btn">
                <i class="fa fa-plus-square">Добавить слой с текстом</i>
            </div>
            <div id="bs-add-img-btn">
                <i class="fa fa-plus-square">Добавить слой с изображением</i>
            </div>
        </div>

        <input id="img-input" type="file" accept="jpg,png,gif" style="display:none"></input>

    </div>

    <div class="bs-toolbar left">
        <ul class="nav nav-hor right">
            <li>
                <i id="save-btn" class="fa fa-check-circle-o" title="Add"></i>
            </li>
            <li>
                <i id="cancel-btn" class="fa fa-ban" title="Cancel"></i>
            </li>
        </ul>
    </div>
</div>